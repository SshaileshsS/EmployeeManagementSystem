@model IEnumerable<EmployeeProp>

@{
    ViewBag.Title = "Employee List";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.photoPath ?? "img1.png");
        <div class="card m-3" style="min-width:19rem;max-width:24rem">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top " style="width:auto;height:250px;" src="@photoPath"
                 asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id"
                   onclick="return alert('Are you sure Want to delete this record')" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>