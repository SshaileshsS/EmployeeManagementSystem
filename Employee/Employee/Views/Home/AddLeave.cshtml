@model EMPLeave

@{
    ViewBag.Title = "Add Leave";
}

    <form enctype="multipart/form-data" asp-controller="home" asp-action="AddLeave" method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="LeaveType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LeaveType" class="form-control" placeholder="Name">
                <span class="text-danger" asp-validation-for="LeaveType"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="StartDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="StartDate" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="StartDate"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EndDate" class="form-control" placeholder="Email">
                <span class="text-danger" asp-validation-for="EndDate"></span>
            </div>
            </div>

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>