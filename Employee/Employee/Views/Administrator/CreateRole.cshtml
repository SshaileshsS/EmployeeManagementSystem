@model CreateRoleViewModel

@{
    ViewBag.Title = "Create Roles";
}

<form asp-controller="Administrator" asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="RoleName" class=" col-form-label"></label>
        <input asp-for="RoleName" class="form-control">
        <span class="text-danger" asp-validation-for="RoleName"></span>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create Role</button>
        </div>
    </div>
</form>